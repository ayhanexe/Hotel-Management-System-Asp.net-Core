@model SettingsViewModel
@{
    ViewData["Title"] = "UserSettings";
}

<h1>Settings</h1>
<form asp-controller="User" asp-action="SaveSettings" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FullName">Full Name</label>
        <input asp-for="FullName" class="form-control" placeholder="Full Name" value="@Model.AuthUserData.FullName" />
        @Html.ValidationMessage("FullName", new {
        @class = "text-danger"
        })
    </div>
    <img src="~/img/@Model.AuthUserData.Photo" style="width:100px;height:100px; object-fit:cover; object-position:center;" />
    <div class="form-group">
        <label asp-for="Photo">Select Photo</label>
        <input asp-for="Photo" class="form-control" />
        @Html.ValidationMessage("Photo", new {
        @class = "text-danger"
        })
    </div>

    <button type="submit" class="btn btn-primary">SAVE SETTINGS</button>
</form>
