@model HotelCreateViewModel
@{
    ViewData["Title"] = "InitializeHotel";
}

<h1>Let's Initialize Your Hotel First!</h1>

<form asp-controller="Hotel" asp-action="InitializeHotel" method="post" enctype="multipart/form-data">
    <div class="d-flex flex-column">
        <label class="fw-bold">Choose Hotel Image</label>
        <input asp-for="File" />
    </div>
    <div class="d-flex flex-column">
        <input asp-for="Name" type="text" class="form-control my-2" placeholder="Name" />
        <input asp-for="Description" type="text" class="form-control my-2" placeholder="Description" />
    </div>

    <div class="mt-2">
        <label>Choose Hotel's Star</label>

        <div class="tentac-star-selector d-flex gap-2">
            <input asp-for="StarCount" type="hidden" value="1" />
            <i data-count="1" class="star-icon bi bi-star-fill"></i>
            <i data-count="2" class="star-icon bi bi-star-fill"></i>
            <i data-count="3" class="star-icon bi bi-star-fill"></i>
            <i data-count="4" class="star-icon bi bi-star-fill"></i>
            <i data-count="5" class="star-icon bi bi-star-fill"></i>
        </div>
    </div>
    <button type="submit" class="btn btn-primary my-3 mx-auto d-block">Save</button>
</form>

@section Styles {
<link rel="stylesheet" href="~/Admin/css/tentac-forms.css" />
}

@section Scripts {
<script src="~/Admin/js/tentac-forms.js"></script>
}