@model HomeIndexViewModel
<!-- banner -->
<section class="hotel-banner-simple hotel-transition-bottom hotelrooms" style="background-image: url(@Url.Content($"~/img/{@Model?.Layout?.AboutBaseSliderPhoto}")) !important;">

    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="hotel-center hotel-title-frame">
                    <h1 class="hotel-mb-20 hotel-h1-inner">@Model.Layout.HotelSliderTitle</h1>
                    <p class="hotel-mb-30">@Model.Layout.HotelSliderDescription</p>
                    <ul class="hotel-breadcrumbs">
                        <li><a href="index.html">Ana Səhifə</a></li>
                        <li><span>Hotellər</span></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- banner end -->
<!-- rooms -->
<section class="hotel-p-100-100">
    <div class="container">

        <div class="hotel-filter hotel-mb-60">
            <a href="#" data-filter="*" class="hotel-work-category hotel-current">Bütün Hotellər</a>
            <a href="#" data-filter=".deluxe" class="hotel-work-category">A Hotel</a>
            <a href="#" data-filter=".standart" class="hotel-work-category">B Hotel</a>
            <a href="#" data-filter=".economy" class="hotel-work-category">C Hotel</a>
        </div>

        <div class="hotel-masonry-grid hotel-3-col">

            <div class="hotel-grid-sizer"></div>
            @foreach (var hotel in @Model.Hotels)
            {
                <div class="hotel-masonry-grid-item hotel-masonry-grid-item-33 deluxe">
                    <!-- room card -->
                <div class="hotel-room-card">
                        <div class="hotel-cover-frame imgLoad">
                            <a asp-action="Rooms" asp-controller="Home" asp-route-id="@hotel.Id"><img class="lozad" src="~/img/@hotel.Photo" alt="cover"></a>
                        </div>
                        <div class="hotel-description-frame">
                            <ul class="hotel-stars">
                                <div class="tentac-star-selector">
                                    @for (var i = 1; i <= 5; i++)
                                    {
                                        if (i <= @hotel.StarCount)
                                        {
                                            <i class="star-icon bi bi-star-fill active"></i>
                                        }
                                        else
                                        {
                                            <i class="star-icon bi bi-star-fill"></i>
                                        }
                                    }
                                </div>
                            </ul>
                            <a asp-action="Rooms" asp-controller="Home" asp-route-id="@hotel.Id">
                                <h3 class="hotel-mb-20">@hotel.Name</h3>
                            </a>
                            <div class="hotel-text-light hotel-text-sm hotel-mb-20">@hotel.Description</div>
                            <div class="hotel-card-bottom imgLoad">

                                <a asp-action="Rooms" asp-controller="Home" asp-route-id="@hotel.Id" class="hotel-btn"><img class="lozad" src="~/img/icons/bookmark.svg" alt="icon">Hotelə get</a>
                            </div>
                        </div>
                    </div>
                    <!-- room card end -->
            </div>
            }

        </div>

    </div>
</section>
<!-- rooms end -->
@section Styles {
<link rel="stylesheet" href="~/Admin/css/tentac-forms.css" />
}